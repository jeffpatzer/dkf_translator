<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/meta' %>
    <%= render 'layouts/stylesheets' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <div class='container'>
      <%= render 'layouts/header' %>
      <section>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
    <!-- Javascript at the bottom of the page for performance gains. -->
    <%= javascript_include_tag "application" %>
  </body>
</html>
